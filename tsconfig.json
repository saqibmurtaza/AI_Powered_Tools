{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "files": [],
  "references": [
    { "path": "./extension" },
    { "path": "./frontend" },
    { "path": "./shared" }
  ],
  "exclude": ["**/dist", "**/node_modules"]
}